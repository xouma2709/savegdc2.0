{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container" style="width:500px">


<div class="from-group">

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Identifiant</label>
        <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" type="mail" id="username" name="_username" value="{{ last_username }}"/>
        <br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" class="form-control" id="exampleInputPassword1"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
        <br>
        <button type="submit" class="btn btn-primary btn-block center">Se connecter</button>
    </form>
  </div>
    </div>
{% endblock %}
