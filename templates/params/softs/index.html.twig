{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}





{% block body %}
<main class="flex-shrink-0">
    <div class="container">
        <h1 class="mt-5">Les softs  <a class="btn btn-success" href='/params/softs/addSoft'><i class="fa-solid fa-plus"></i></a>
    </h1>
        <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom du logiciel</th><th class="text-center">Synchro AD</th><th>Infos Complémentaires</th><th class="text-center">Actif</th>
        </tr>
        </thead>
        <tbody>
        {% block content %}
            {% for Softs in Softs %}
            <tr>
                <td> {{ Softs.SoftLibelle }} </td>
                    <td class="text-center">
                    {% if Softs.synchroAD  == 1 %}
                <i class="fa-solid fa-circle-check"></i>
                    {% endif %}
                    {% if Softs.synchroAD  != 1 %}
                <i class="fa-solid fa-circle-xmark"></i>   
                    {% endif %}
                    </td>
                    <td>{{ Softs.Precisions }}</td>
                    <td class="text-center">
                        {% if Softs.Actif  == 1 %}
                    <i class="fa-solid fa-circle-check"></i>
                        {% endif %}
                        {% if Softs.Actif  != 1 %}
                    <i class="fa-solid fa-circle-xmark"></i>   
                        {% endif %}
                    </td>
                    <td><a href={{ path('editSoft', {'id': Softs.id}) }}><i class="fa-solid fa-pen-to-square"></i></a></td>
                </tr>
            {% endfor %}
        {% endblock %}
            </tbody>
        </table>
        <div class="col text-end">
    <a class="btn btn-danger" href='/params'><i class="fa-solid fa-backward"></i></a>
<a class="btn btn-success" href='/params/softs/addSoft'><i class="fa-solid fa-plus"></i></a>

    </div>
</div>

</main>
{% endblock %}
